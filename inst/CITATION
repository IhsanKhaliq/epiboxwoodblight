year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{epiboxwoodblight}: A research compendium to accompany 'Epidemiology of boxwood blight in western North Carolina and Virginia and validation of boxwood blight infection risk model'",
         author = c(person("Ihsanul", "Khaliq"),
                    person("Herve", "Avenot"),
                    person("Anton", "Baudoin"),
                    person("Joshua", "Fanning"),
                    person("Leonard", "Coop"),
                    person("Chaunxue", "Hong")),
         year = year,
         note = note,
         url = "https://github.com/IhsanKhaliq/epiboxwoodblight.git")


textVersion =
  paste0("Ihsanul Khaliq, Herve Avento, Anton Baudoin, Leonard Coop, Chuanxue Hong (",
         year,
         "). epiboxwoodblight: A research compendium to accompany 'Epidemiology of boxwood blight in western North Carolina and Virginia and validation of boxwood blight infection risk model")
